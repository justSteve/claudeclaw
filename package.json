{
  "name": "claudeclaw",
  "version": "1.0.0",
  "description": "Mark's personal Claude Code assistant via Telegram",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "launchctl unload ~/Library/LaunchAgents/com.claudeclaw.plist 2>/dev/null; pkill -f 'node.*dist/index' 2>/dev/null; sleep 1; tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "setup": "tsx scripts/setup.ts",
    "status": "tsx scripts/status.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "better-sqlite3": "^11.8.1",
    "cron-parser": "^5.5.0",
    "grammy": "^1.34.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@vitest/coverage-v8": "^2.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "vitest": {
    "environment": "node",
    "include": [
      "src/**/*.test.ts"
    ]
  }
}
